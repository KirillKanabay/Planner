<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerView.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PlannerView.Windows.CategoryEdit"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="CategoryEdit" Height="155.4" Width="502">
    <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Margin="0,0,0,15.6">
        <TextBox x:Name="CategoryNameTextBox" HorizontalAlignment="Left" Height="26" Margin="9,19,0,0" TextWrapping="Wrap" Text="Введите название категории" VerticalAlignment="Top" Width="466" BorderBrush="#4C000000"/>
        <Button x:Name="SaveTask" Content="Сохранить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#FF15C651" BorderBrush="#FF15C651" Click="Button_Click" Width="111" Margin="0,0,10,0"/>
        <xctk:ColorPicker x:Name="ColorPicker" Height="22" Margin="10,74,288,7.2"/>
        <Label Content="Укажите фоновый цвет категории:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
